<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
   <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="#CCCCCC"
                android:startColor="#EFEFEF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#060c18" />
            <stroke
                android:width="1dp"
                android:color="#060c18" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#06225b"
                android:endColor="#060c18"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#06225b" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>